{% extends 'base.html.twig' %}
{% block body %}
    <h2 class="page-header">Latest Tasks</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Todo</th>
            <th>Finish date</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {%  for todo in todos %}



        <tr>
            <th scope="row">{{ todo.id }}</th>
            <td>{{ todo.name }}</td>

            <td><a href="/app_dev.php/todos/details/{{ todo.id }}" class="btn btn-success">View</a></td>
            <td><a href="/app_dev.php/todos/edit/{{ todo.id }}" class="btn btn-primary">Edit</a></td>
            <td><a href="/app_dev.php/todos/delete/{{ todo.id }}" class="btn btn-danger">Delete</a></td>
        </tr>

        {% endfor %}
        </tbody>
    </table>
{% endblock %}
